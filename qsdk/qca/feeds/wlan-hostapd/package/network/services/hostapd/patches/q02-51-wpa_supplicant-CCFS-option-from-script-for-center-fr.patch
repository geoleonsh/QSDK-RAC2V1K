 	{ INT(ru_punct_bitmap) },
 	{ INT_RANGE(use_ru_puncture_dfs, 0, 1) },
+	{ INT(ccfs) },
 	{ INT_RANGE(disable_eht, 0, 1)},
 	{ INT_RANGE(enable_4addr_mode, 0, 1)},
 };
