+static void ru_punct_update_bw_320(u16 bitmap, u8 pri_chan,
+				   enum oper_chan_width *width, u8 *seg0)
+{
+	if (pri_chan < *seg0) {
+		*seg0 -= 16;
+		if (bitmap & 0x00FF) {
+			*width = 1;
+			ru_punct_update_bw_160(bitmap & 0xFF,
+					       pri_chan, width,
+					       seg0);
+		}
+	} else {
+		*seg0 += 16;
+		if (bitmap & 0xFF00) {
+			*width = 1;
+			ru_punct_update_bw_160((bitmap & 0xFF00) >> 8,
+					       pri_chan, width,
+					       seg0);
+		}
+	}
+}
 
