 		ru_punct_update_bw_160(bitmap & 0xFF, pri_chan, width, seg0);
 	}
+	/* 320 MHz */
+	if ((*width) == 9 && (bitmap & 0xFFFF)) {
+		*width = 2;
+		ru_punct_update_bw_320(bitmap & 0xFFFF, pri_chan, width, seg0);
